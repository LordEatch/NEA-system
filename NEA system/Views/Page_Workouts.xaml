<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="page_Workouts"
             x:Class="NEA_system.Views.Page_Workouts"
             Title="Workouts">

    <StackLayout>
        <Label Text="{Binding NumberOfWorkouts}"/>

        <Button Text="Add workout" Command="{Binding TestCommand}"/>

        <CollectionView
            ItemsSource="{Binding Workouts}"
            SelectionMode="Single">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Button
                        Text="{Binding WorkoutMuscleGroup}"
                        Command="{Binding Path=BindingContext.WorkoutSelectedCommand, Source={x:Reference page_Workouts}}"
                        CommandParameter="{Binding .}"
                        
                        WidthRequest="200"
                        HeightRequest="200"
                        />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </StackLayout>
</ContentPage>