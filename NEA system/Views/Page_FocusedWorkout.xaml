<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:NEA_system.ViewModels"
             xmlns:models="clr-namespace:NEA_system.Models"
             xmlns:views="clr-namespace:NEA_system.Views"
             x:Class="NEA_system.Views.Page_FocusedWorkout"
             Title="{Binding MyWorkout.WorkoutMuscleGroup}">
    <VerticalStackLayout>
        <Button
            Text="Edit workout"
            Command="{Binding GoToPage_EditWorkout}"/>

        <Label Text="{Binding MyWorkout.Date}"/>

        <ListView
                ItemsSource="{Binding Exercises}"
                SelectionMode="Single"
                VerticalOptions="Fill">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Label Text="{Binding ExerciseName}"/>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
    </VerticalStackLayout>
</ContentPage>