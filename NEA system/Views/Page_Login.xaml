<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:NEA_system.ViewModels"
             x:Class="NEA_system.Views.Page_Login"
             x:Name="page_Login"
             Title="Login"
             Shell.FlyoutBehavior="Disabled">
    
    <ContentPage.BindingContext>
        <viewmodels:VM_Login/>
    </ContentPage.BindingContext>

    <StackLayout>
        <CollectionView
            ItemsSource="{Binding Users}"
            SelectionMode="Single"
            ItemsLayout="HorizontalList">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Button
                        Text="{Binding Username}"
                        Command="{Binding Path=BindingContext.UserSelectedCommand, Source={x:Reference page_Login}}"
                        CommandParameter="{Binding .}"
                        
                        WidthRequest="200"
                        HeightRequest="200"
                        />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Create a user" Command="{Binding GoToPage_CreateUser}"/>
    </StackLayout>
</ContentPage>