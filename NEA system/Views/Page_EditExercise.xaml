<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:models="clr-namespace:NEA_system.Models"
             xmlns:viewmodels="clr-namespace:NEA_system.ViewModels"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NEA_system.Views.Page_EditExercise"
             Title="Page_EditExercise">
    <VerticalStackLayout>
        <Label
            Text="{Binding OneRepMaxLabel}"/>

        <Button
            Text="Add set"
            Command="{Binding AddSetCommand}" />

        <ListView
            ItemsSource="{Binding ResistanceSets}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <HorizontalStackLayout>
                            <Entry Placeholder="{Binding Mass}"/>
                            <Entry Placeholder="{Binding StrictReps}"/>
                            <Entry Placeholder="{Binding CheatedReps}"/>
                            <Entry Placeholder="{Binding SetComment}"/>
                            <Button
                            Text="Delete"/>
                        </HorizontalStackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>